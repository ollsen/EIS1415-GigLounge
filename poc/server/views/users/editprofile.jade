extends ../layout

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                #user
                    form(class='form-signin', action='edit', method='POST', enctype='application/x-www-form-urlencoded')
                        input(type='hidden' name='_method' value='put')
                        label(for='email') E-Mail
                        input(type='email', name='email', class='form-control', value='#{user.email}', required)
                        label(for='firstName') Vorname
                        input(type='text', name='firstName', class='form-control', value='#{user.firstName}', required)
                        label(for='lastName') Nachname
                        input(type='text', name='lastName', class='form-control', value='#{user.lastName}', required)
                        label(for='country') Land
                        input(type='text', name='country', class='form-control', value='#{user.country}')
                        label(for='city') Stadt
                        input(type='text', name='city', class='form-control', value='#{user.city}')
                        label(for='mInstrument') Musikinstrument
                        input(type='text', name='mInstrument', class='form-control', value='#{user.mInstrument}')
                        button(class='btn btn-lg btn-primary btn-block', type='submit') Update
                                span.clearfix