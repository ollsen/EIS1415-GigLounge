extends ../layout

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                #band
                    h1.text-center.login-title Band-Registration
                        div.signup-wall
                            form(class='form-signin', method='POST')
                                input(type='text', name='bandName', class='form-control', placeholder='Bandname', required, autofocus)
                                input(type='text', name='country', class='form-control', placeholder='Land', required)
                                input(type='text', name='city', class='form-control', placeholder='Ort', required)
                                input(type='text', name='genre', class='form-control', placeholder='Genre', required)
                                input(type='text', name='creator', value='#{user.username}')
                                button(class='btn btn-lg btn-primary btn-block', type='submit') Register
                                span.clearfix