extends layout

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                #user
                    h1.text-center.login-title #{userprofile.username}'s profile:
                    ul.user-details
                        li Username ---> #{userprofile.username}
                        li Email ---> #{userprofile.email}
                        li First Name ---> #{userprofile.firstName}
                        li Last Name ---> #{userprofile.lastName}
                    if userprofile.username == user.username
                        a(href='/#{userprofile.username}/edit') Edit